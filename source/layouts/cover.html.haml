= wrap_layout :application do
  - if current_page.data.cover
    - image_url = image_path(current_page.data.cover)
  .cover{:style => "background-image: url('#{image_url}')"}
    .cover-inner
      %h1.cover-title= current_page.data.title
      %h2.cover-subtitle= current_page.data.subtitle
  .cover-copy
    .cover-copy-inner
      = yield
  .cover-colophon
    .cover-colophon-inner
      .colophon-text
        :markdown
          Grant report published by the Getty Foundation, and licensed under a <br />[Creative Commons Attribution 4.0 International License](http://creativecommons.org/licenses/by/4.0/){:rel="license"} except where otherwise noted.
        = link_to "Privacy Policy", "http://www.getty.edu/legal/privacy.html", :target => "blank"
        %span &#124;
        = link_to "Terms of Use", "http://www.getty.edu/legal/copyright.html", :target => "blank"
      .colophon-logo
        = tag :img, :src => image_path("getty_logo.svg"), :alt => "Getty Logo"
