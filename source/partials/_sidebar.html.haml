.nav-sidebar-inner
  %header.nav-sidebar-header.nav-sidebar-toc-section
    %h2.nav-sidebar-title= link_to title, "index.html"
    %a.nav-sidebar-close{:href => "javascript:void(0)", :id => "nav-menu-close"}
      %i.ion-android-close
    %nav-sidebar-content
      %ul.nav-sidebar-toc
        - chapters.each do |chapter|
          - if chapter.data.sidebar != false
            %li= link_to chapter.title, chapter
  .nav-sidebar-downloads
    = partial "partials/downloads"
  %footer.nav-sidebar-footer
    %p
      #{data.book.title.subtitle}
    %p
      Published by the Getty Foundation and licensed under a <a href="#{data.book.license.url}" rel="license">#{data.book.license.type}</a>, except where otherwise noted.
    %p
      = link_to "Source Code", "#{data.book.repository_url}", { target: "_blank", class: "ion-social-github" }
      %span &#124;
      = link_to "Privacy", "http://www.getty.edu/legal/privacy.html", { target: "_blank" }
      %span &#124;
      = link_to "Terms of Use", "http://www.getty.edu/legal/copyright.html", { target: "_blank" }
    .nav-logo
      %a{:href => "#{data.book.publisher.url}", :target => "_blank", :title => "#{data.book.publisher.name}" }
        <svg><switch><use xlink:href="#getty-logo"></use><foreignObject><img src="assets/images/getty-logo.png" alt="The Getty logo" /></foreignObject></switch></svg>
